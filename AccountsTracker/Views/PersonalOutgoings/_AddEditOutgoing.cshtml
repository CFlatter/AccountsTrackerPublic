@model PersonalOutgoingsViewModel

<form asp-action="SavePersonalOutgoing" method="post">
        <div class="form-group row pt-2">
        <label asp-for="AddEditPersonalOutgoingsViewModel.Description" class="col-sm-2 col-form-label">Enter a description:</label>
        <div class="col-sm-4">
            <input asp-for="AddEditPersonalOutgoingsViewModel.Id" type="hidden" />
            <input asp-for="AddEditPersonalOutgoingsViewModel.PersonId" type="hidden" />
            <input asp-for="AddEditPersonalOutgoingsViewModel.Description" class="form-control" />
        </div>
    </div>
    <div class="form-group row pt-2">
        <label asp-for="AddEditPersonalOutgoingsViewModel.Amount" class="col-sm-2 col-form-label">Enter the amount:</label>
        <div class="col-sm-4">
            <input asp-for="AddEditPersonalOutgoingsViewModel.Amount" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3" asp->Save</button>
    <button type="button" id="closeEditOutgoingForm" class="btn btn-secondary mt-3">Close</button>
</form>

@model PersonViewModel

<form id="AddPersonForm"  asp-action="SavePerson" method="post">
    <div class="form-group row pt-2">
        <label asp-for="AddEditPersonViewModel.Name" class="col-sm-2 col-form-label">Enter the person's name:</label>
        <div class="col-sm-4">
            <input asp-for="AddEditPersonViewModel.Id" type="hidden" />
            <input asp-for="AddEditPersonViewModel.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group row pt-2">
        <label asp-for="AddEditPersonViewModel.GrossIncome" class="col-sm-2 col-form-label">Enter their gross income:</label>
        <div class="col-sm-4">
            <input asp-for="AddEditPersonViewModel.GrossIncome" class="form-control" />
        </div>
    </div>
    <div class="form-group row pt-2">
        <label asp-for="AddEditPersonViewModel.NetIncome" class="col-sm-2 col-form-label">Enter their net income:</label>
        <div class="col-sm-4">
            <input asp-for="AddEditPersonViewModel.NetIncome" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <button type="button" id="closeEditPersonForm" class="btn btn-secondary mt-3">Close</button>
</form>

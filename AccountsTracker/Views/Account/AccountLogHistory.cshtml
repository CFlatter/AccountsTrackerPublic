@model AccountLogHistoryViewModel

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th><h2>@ViewBag.AccountName</h2></th>
        </tr>
        <tr>
            <th>Date Logged</th>
            <th>Account Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var log in Model.AccountLogs)
        {
            <tr>
                <td>@log.LogDate.ToShortDateString()</td>
                <td>@log.AccountBalance</td>
                <td>
                    <form method="post">
                        <button asp-controller="Account" asp-action="DeleteAccountLog" asp-route-accountLogId="@log.Id" asp-route-accountId="@log.AccountId" type="submit" class="btn btn-close"></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>